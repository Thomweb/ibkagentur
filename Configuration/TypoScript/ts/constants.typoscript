##############################################################
### IBK Provider Extension - Template Paths                ###
##############################################################

plugin.tx_ibkagentur {
	view {
		# cat=plugin.tx_ibkagentur/file; type=string; label=Path to template root (FE)
		templateRootPaths {
			10 = EXT:ibkagentur/Resources/Private/Templates/
		}
		# cat=plugin.tx_ibkagentur/file; type=string; label=Path to template partials (FE)
		partialRootPaths {
			10 = EXT:ibkagentur/Resources/Private/Partials/
		}
		# cat=plugin.tx_ibkagentur/file; type=string; label=Path to template layouts (FE)
		layoutRootPaths {
			10 = EXT:ibkagentur/Resources/Private/Layouts/
		}
	}
}

##############################################################
### Eigene Partials für Frontend Rendering                 ###
##############################################################

styles {
	templates {
		partialRootPath = EXT:ibkagentur/Resources/Private/Content/Partials/
		templateRootPath = EXT:ibkagentur/Resources/Private/Content/Templates/
		layoutRootPath = EXT:ibkagentur/Resources/Private/Content/Layouts/
	}
}

##############################################################
### IBK Provider Extension - Settings                ###
##############################################################

plugin.tx_ibkagentur {
	settings {
		pages {
			pageBuecherUID = 281
		}
	}
}


##############################################################
